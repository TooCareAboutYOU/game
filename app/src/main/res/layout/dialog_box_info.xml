<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <ImageView
        android:id="@+id/imgBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvTitle"
            android:layout_width="262dp"
            android:layout_height="60dp"
            app:layout_editor_absoluteY="126.67dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/icon_getgift"/>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/llContainer1"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            app:layout_constraintTop_toBottomOf="@+id/sdvTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="54dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="29dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_one"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:background="@mipmap/ic_launcher"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acTv_One"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="null"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_two"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:background="@mipmap/ic_launcher"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acTv_Two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="null"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </android.support.v7.widget.LinearLayoutCompat>
        <RelativeLayout
            android:id="@+id/cl_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/llContainer1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_three"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:background="@mipmap/ic_launcher"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/acTv_Three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="null"
                android:textSize="18sp"/>
        </RelativeLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_Get"
            app:layout_constraintTop_toBottomOf="@+id/cl_"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_get"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>