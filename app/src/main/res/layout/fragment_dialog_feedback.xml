<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <RadioGroup
        android:id="@+id/rg_FeedBack"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone">
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/acRbtn_Question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_tag_frame"
            android:textColor="@drawable/selector_tag_textcolor"
            android:gravity="center"
            android:checked="true"
            android:button="@null"
            android:layout_weight="1"
            android:text="问题"/>
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/acRbtn_Idea"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_tag_frame"
            android:textColor="@drawable/selector_tag_textcolor"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:text="意见"/>
    </RadioGroup>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5dp"
        android:minHeight="150dp"
        android:orientation="vertical"
        android:background="@drawable/shape_2">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ac_Dt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请输入你的问题"
            android:textColorHint="@android:color/darker_gray"
            android:gravity="start"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:background="@null"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:text="10~200字"/>
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.LinearLayoutCompat>