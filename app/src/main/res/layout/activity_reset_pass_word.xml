<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="?android:attr/actionBarSize">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/acEt_NewPassWord"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/radius_10_stroke_gray"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:textSize="14sp"
            android:hint="请输入新密码"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/acTv_Finish"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginTop="30.4dp"
            android:background="@drawable/selector_btn_long"
            android:gravity="center"
            android:text="完成"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/acEt_NewPassWord"/>
        
    </android.support.v7.widget.LinearLayoutCompat>
    
    


</android.support.v7.widget.LinearLayoutCompat>