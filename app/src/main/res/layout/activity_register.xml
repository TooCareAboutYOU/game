<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/base_toolbar" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/acTv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_base"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="13sp"
        android:hint="null"
        tools:ignore="UnknownIdInLayout" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_"
        android:layout_width="310dp"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/acTv_mobile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="4" >
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/acEt_captcha1"
            android:layout_width="68dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:maxLength="1"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:textColor="#12B5FF"
            android:background="@drawable/radius_10_stroke_gray"
            android:textSize="48sp"
            android:inputType="number"
            tools:ignore="UnknownIdInLayout" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/acEt_captcha2"
            android:layout_width="68dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:maxLength="1"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:textColor="#12B5FF"
            android:background="@drawable/radius_10_stroke_gray"
            android:textSize="48sp"
            android:inputType="number"
            tools:ignore="UnknownIdInLayout" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/acEt_captcha3"
            android:layout_width="68dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:maxLength="1"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:textColor="#12B5FF"
            android:background="@drawable/radius_10_stroke_gray"
            android:textSize="48sp"
            android:inputType="number"
            tools:ignore="UnknownIdInLayout" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/acEt_captcha4"
            android:layout_width="68dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:maxLength="1"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="#12B5FF"
            android:background="@drawable/radius_10_stroke_gray"
            android:textSize="48sp"
            android:inputType="number"
            tools:ignore="UnknownIdInLayout" />
    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/acTv_Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="?android:attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@+id/ll_"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="13sp"
        android:text="null"/>


</android.support.constraint.ConstraintLayout>