<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="@dimen/padding_10dp"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/icon_shop_item_bg">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/acTv_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="80dp"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/margin_5dp"
            app:layout_constraintBottom_toTopOf="@+id/acTv_Amount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/acTv_Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="80dp"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/margin_5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/acTv_Mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingTop="@dimen/padding_5dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            app:layout_constraintRight_toRightOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_Small"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_margin="@dimen/margin_5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/acTv_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="30dp" />

    </android.support.constraint.ConstraintLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_Icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"/>

</android.support.constraint.ConstraintLayout>