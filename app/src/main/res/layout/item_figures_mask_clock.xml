<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="66dp"
    android:layout_height="66dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">
    <FrameLayout
        android:layout_width="66dp"
        android:layout_height="66dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_live2d"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="2dp"/>
        <RelativeLayout
            android:id="@+id/rl_MaskClock"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/radius_5_half_transparent">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/acTv_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:text="null" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_Lock"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_5dp"
                android:background="@drawable/icon_clock"/>
        </RelativeLayout>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_Item_Container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
</android.support.v7.widget.LinearLayoutCompat>
