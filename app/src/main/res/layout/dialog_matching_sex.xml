<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="149dp"
    android:background="@drawable/radius_10_bottom_bg_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:id="@+id/rg_"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_editor_absoluteY="@dimen/margin_10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical">
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/acRbtn_Remale"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:background="@mipmap/ic_launcher"/>
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/acRbtn_Male"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="?android:attr/actionBarSize"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:background="@mipmap/ic_launcher"/>

    </RadioGroup>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/acTv_sure"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/rg_"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@mipmap/ic_launcher"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="14sp"
        android:text="null"/>

</android.support.constraint.ConstraintLayout>
