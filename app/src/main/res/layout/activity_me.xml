        <!--头像-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_UserLogo"
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:roundAsCircle="true"
            app:roundedCornerRadius="27dp"
            app:actualImageScaleType="fitCenter"
            android:background="@mipmap/ic_launcher"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_base"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="UnknownIdInLayout" />
        <!--用户名、id信息-->
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sdv_UserLogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/acTv_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:singleLine="true"
                android:lines="1"
                android:maxLength="6"
                android:ellipsize="end"
                android:text="null" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_UserSex"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitXY"
                android:background="@mipmap/ic_launcher"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/acTv_UserAccountID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:singleLine="true"
                android:lines="1"
                android:maxLength="6"
                android:ellipsize="end"
                android:text="null" />
        </android.support.v7.widget.LinearLayoutCompat>
        <!--等级-->
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/acTv_UserLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="null"/>
            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/progressBar_Level"
                android:layout_width="183dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="100"
                android:min="0"
                android:progress="0"
                tools:ignore="UnusedAttribute" />
        </android.support.v7.widget.LinearLayoutCompat>
        <!--详细信息-->
        <android.support.v7.widget.LinearLayoutCompat
            app:layout_constraintTop_toBottomOf="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <!--钻石-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acTv_UserDiamonds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:text="null"/>
            </android.support.v7.widget.LinearLayoutCompat>
            <!--运动-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acTv_UserSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:text="null"/>
            </android.support.v7.widget.LinearLayoutCompat>
            <!--星星-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acTv_UserGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:text="null"/>
            </android.support.v7.widget.LinearLayoutCompat>
            <!--星星-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acTv_UserCharm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:text="null"/>
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.constraint.ConstraintLayout>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_UserMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.v7.widget.LinearLayoutCompat>