<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_me_bg">
    <!--返回、编辑-->
    <include layout="@layout/base_toolbar" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--头像-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_UserLogo"
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:roundAsCircle="true"
            app:roundedCornerRadius="27dp"
            app:actualImageScaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="UnknownIdInLayout" />
        <!--用户名、id信息-->
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_5dp"
            app:layout_constraintTop_toBottomOf="@+id/sdv_UserLogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_UserSex"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/acTv_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:lines="1"
                android:maxLength="6"
                android:ellipsize="end"  />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/acTv_UserAccountID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:singleLine="true"
                android:lines="1"
                android:maxLength="6"
                android:ellipsize="end"  />
        </android.support.v7.widget.LinearLayoutCompat>
        <!--等级-->
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_5dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/acTv_UserLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/progressBar_Level"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="114dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:max="100"
                android:min="0"
                android:progress="0"
                tools:ignore="UnusedAttribute" />
        </android.support.v7.widget.LinearLayoutCompat>
        <!--运动-->
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_5dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_me_sports"
                android:layout_gravity="center_vertical"/>
            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/progressBar_Sport"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="114dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:max="500"
                android:min="0"
                android:progress="0"
                tools:ignore="UnusedAttribute" />
        </android.support.v7.widget.LinearLayoutCompat>
        <!--详细信息-->
        <android.support.v7.widget.LinearLayoutCompat
            app:layout_constraintTop_toBottomOf="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <!--钻石-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_me_diamonds"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acTv_UserDiamonds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:text="null"/>
            </android.support.v7.widget.LinearLayoutCompat>
            <!--金币-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="20.67dp"
                    android:layout_height="20.67dp"
                    android:background="@drawable/icon_me_golds"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acTv_UserGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:text="null"/>
            </android.support.v7.widget.LinearLayoutCompat>
            <!--魅力值-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="25dp"
                    android:layout_height="24.27dp"
                    android:background="@drawable/icon_me_charms"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/acTv_UserCharm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:text="null"/>
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.constraint.ConstraintLayout>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_UserMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingStart="@dimen/padding_10dp"
        android:paddingEnd="0dp" />

</android.support.v7.widget.LinearLayoutCompat>